<?xml version="1.0" ?>
<sdf version="1.7">
  <world name="humanoid_world">
    <!-- Physics engine configuration -->
    <physics type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
      <real_time_update_rate>1000.0</real_time_update_rate>
      <gravity>0 0 -9.8</gravity>

      <!-- ODE-specific parameters -->
      <ode>
        <solver>
          <type>quick</type>
          <iters>10</iters>
          <sor>1.3</sor>
        </solver>
        <constraints>
          <cfm>0.000001</cfm>
          <erp>0.2</erp>
          <contact_max_correcting_vel>100.0</contact_max_correcting_vel>
          <contact_surface_layer>0.001</contact_surface_layer>
        </constraints>
      </ode>
    </physics>

    <!-- Include default ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Include default sun light -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Add ambient light to the world -->
    <ambient>0.4 0.4 0.4 1</ambient>
    <background>0.7 0.7 0.7 1</background>

    <!-- Insert the humanoid robot model using the URDF -->
    <include>
      <name>simple_humanoid</name>
      <pose>0 0 1.0 0 0 0</pose>  <!-- Position the robot 1m above ground to ensure it starts properly positioned -->
      <uri>file://$(find my_robot_description)/urdf/humanoid_torso.urdf</uri>
    </include>

    <!-- Alternative: Directly embed the humanoid model if not using external URDF -->
    <!-- This is a simplified version focusing on the torso and arms from our previous URDF -->
    <model name="embedded_humanoid">
      <pose>2 0 1.0 0 0 0</pose>

      <!-- Main body/torso link -->
      <link name="torso">
        <pose>0 0 0.4 0 0 0</pose>
        <inertial>
          <mass>10.0</mass>
          <inertia>
            <ixx>0.8</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.8</iyy>
            <iyz>0.0</iyz>
            <izz>0.4</izz>
          </inertia>
        </inertial>
        <visual name="torso_visual">
          <geometry>
            <box>
              <size>0.3 0.4 0.8</size>
            </box>
          </geometry>
          <material>
            <ambient>0.6 0.8 1.0 1</ambient>
            <diffuse>0.6 0.8 1.0 1</diffuse>
          </material>
        </visual>
        <collision name="torso_collision">
          <geometry>
            <box>
              <size>0.3 0.4 0.8</size>
            </box>
          </geometry>
        </collision>
      </link>

      <!-- Head link -->
      <link name="head">
        <pose>0 0 0.9 0 0 0</pose>
        <inertial>
          <mass>2.0</mass>
          <inertia>
            <ixx>0.02</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.02</iyy>
            <iyz>0.0</iyz>
            <izz>0.02</izz>
          </inertia>
        </inertial>
        <visual name="head_visual">
          <geometry>
            <sphere>
              <radius>0.15</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.9 0.8 0.7 1</ambient>
            <diffuse>0.9 0.8 0.7 1</diffuse>
          </material>
        </visual>
        <collision name="head_collision">
          <geometry>
            <sphere>
              <radius>0.15</radius>
            </sphere>
          </geometry>
        </collision>
      </link>

      <!-- Joint connecting torso to head -->
      <joint name="neck_joint" type="revolute">
        <parent>torso</parent>
        <child>head</child>
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <lower>-0.5</lower>
            <upper>0.5</upper>
            <effort>10</effort>
            <velocity>2</velocity>
          </limit>
          <dynamics>
            <damping>0.5</damping>
            <friction>0.1</friction>
          </dynamics>
        </axis>
        <pose>0 0 0.4 0 0 0</pose>
      </joint>

      <!-- Left shoulder link -->
      <link name="left_shoulder">
        <pose>0 0.225 0.5 0 0 0</pose>
        <inertial>
          <mass>1.5</mass>
          <inertia>
            <ixx>0.01</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.01</iyy>
            <iyz>0.0</iyz>
            <izz>0.01</izz>
          </inertia>
        </inertial>
        <visual name="left_shoulder_visual">
          <geometry>
            <cylinder>
              <length>0.15</length>
              <radius>0.06</radius>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.3 0.3 0.3 1</ambient>
            <diffuse>0.3 0.3 0.3 1</diffuse>
          </material>
        </visual>
        <collision name="left_shoulder_collision">
          <geometry>
            <cylinder>
              <length>0.15</length>
              <radius>0.06</radius>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <!-- Left shoulder joint -->
      <joint name="left_shoulder_joint" type="revolute">
        <parent>torso</parent>
        <child>left_shoulder</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit>
            <lower>-1.57</lower>
            <upper>1.57</upper>
            <effort>100</effort>
            <velocity>2</velocity>
          </limit>
          <dynamics>
            <damping>1.0</damping>
            <friction>0.5</friction>
          </dynamics>
        </axis>
      </joint>

      <!-- Left upper arm link -->
      <link name="left_upper_arm">
        <pose>0 -0.1 0.5 0 0 0</pose>
        <inertial>
          <mass>1.5</mass>
          <inertia>
            <ixx>0.02</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.02</iyy>
            <iyz>0.0</iyz>
            <izz>0.005</izz>
          </inertia>
        </inertial>
        <visual name="left_upper_arm_visual">
          <geometry>
            <cylinder>
              <length>0.3</length>
              <radius>0.04</radius>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
        <collision name="left_upper_arm_collision">
          <geometry>
            <cylinder>
              <length>0.3</length>
              <radius>0.04</radius>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <!-- Left elbow joint -->
      <joint name="left_elbow_joint" type="revolute">
        <parent>left_shoulder</parent>
        <child>left_upper_arm</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit>
            <lower>-2.36</lower>
            <upper>2.36</upper>
            <effort>100</effort>
            <velocity>1.5</velocity>
          </limit>
          <dynamics>
            <damping>0.8</damping>
            <friction>0.3</friction>
          </dynamics>
        </axis>
      </joint>

      <!-- Right shoulder link -->
      <link name="right_shoulder">
        <pose>0 -0.225 0.5 0 0 0</pose>
        <inertial>
          <mass>1.5</mass>
          <inertia>
            <ixx>0.01</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.01</iyy>
            <iyz>0.0</iyz>
            <izz>0.01</izz>
          </inertia>
        </inertial>
        <visual name="right_shoulder_visual">
          <geometry>
            <cylinder>
              <length>0.15</length>
              <radius>0.06</radius>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.3 0.3 0.3 1</ambient>
            <diffuse>0.3 0.3 0.3 1</diffuse>
          </material>
        </visual>
        <collision name="right_shoulder_collision">
          <geometry>
            <cylinder>
              <length>0.15</length>
              <radius>0.06</radius>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <!-- Right shoulder joint -->
      <joint name="right_shoulder_joint" type="revolute">
        <parent>torso</parent>
        <child>right_shoulder</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit>
            <lower>-1.57</lower>
            <upper>1.57</upper>
            <effort>100</effort>
            <velocity>2</velocity>
          </limit>
          <dynamics>
            <damping>1.0</damping>
            <friction>0.5</friction>
          </dynamics>
        </axis>
      </joint>

      <!-- Right upper arm link -->
      <link name="right_upper_arm">
        <pose>0 0.1 0.5 0 0 0</pose>
        <inertial>
          <mass>1.5</mass>
          <inertia>
            <ixx>0.02</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.02</iyy>
            <iyz>0.0</iyz>
            <izz>0.005</izz>
          </inertia>
        </inertial>
        <visual name="right_upper_arm_visual">
          <geometry>
            <cylinder>
              <length>0.3</length>
              <radius>0.04</radius>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
        <collision name="right_upper_arm_collision">
          <geometry>
            <cylinder>
              <length>0.3</length>
              <radius>0.04</radius>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <!-- Right elbow joint -->
      <joint name="right_elbow_joint" type="revolute">
        <parent>right_shoulder</parent>
        <child>right_upper_arm</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit>
            <lower>-2.36</lower>
            <upper>2.36</upper>
            <effort>100</effort>
            <velocity>1.5</velocity>
          </limit>
          <dynamics>
            <damping>0.8</damping>
            <friction>0.3</friction>
          </dynamics>
        </axis>
      </joint>

      <!-- Gazebo-specific properties for the humanoid -->
      <gazebo reference="torso">
        <material>Gazebo/Blue</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
      </gazebo>

      <gazebo reference="head">
        <material>Gazebo/Yellow</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
      </gazebo>

      <gazebo reference="left_shoulder">
        <material>Gazebo/Black</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
      </gazebo>

      <gazebo reference="left_upper_arm">
        <material>Gazebo/Gray</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
      </gazebo>

      <gazebo reference="right_shoulder">
        <material>Gazebo/Black</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
      </gazebo>

      <gazebo reference="right_upper_arm">
        <material>Gazebo/Gray</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
      </gazebo>
    </model>

    <!-- Add some objects for the humanoid to interact with -->
    <model name="interaction_box">
      <pose>1 1 0.5 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box>
              <size>0.3 0.3 0.3</size>
            </box>
          </geometry>
          <material>
            <ambient>1 0 0 1</ambient>
            <diffuse>1 0 0 1</diffuse>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <box>
              <size>0.3 0.3 0.3</size>
            </box>
          </geometry>
        </collision>
        <inertial>
          <mass>1.0</mass>
          <inertia>
            <ixx>0.015</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.015</iyy>
            <iyz>0</iyz>
            <izz>0.015</izz>
          </inertia>
        </inertial>
      </link>
    </model>

    <!-- Add a ramp for the humanoid to walk on -->
    <model name="ramp">
      <pose>-2 0 0 0 0.3 0</pose>
      <link name="ramp_link">
        <visual name="visual">
          <geometry>
            <box>
              <size>2.0 1.0 0.1</size>
            </box>
          </geometry>
          <material>
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <box>
              <size>2.0 1.0 0.1</size>
            </box>
          </geometry>
        </collision>
        <inertial>
          <mass>10.0</mass>
          <inertia>
            <ixx>1.08</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.83</iyy>
            <iyz>0</iyz>
            <izz>0.25</izz>
          </inertia>
        </inertial>
      </link>
    </model>
  </world>
</sdf>